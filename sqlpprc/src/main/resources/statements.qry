;
FUN_AN_HOUR_BEFORE(OUT)=
  1$1(type=stamp)
;

PROC_NEW_PERSON(CALL,inx=NewPerson)=
  call NEW_PERSON(:<newid, :dateOfBirth, :ssn, :firstName, :lastName)
;

PROC_NEW_PERSON_RET_RS(CALL,inx=NewPersonRetRs)=
